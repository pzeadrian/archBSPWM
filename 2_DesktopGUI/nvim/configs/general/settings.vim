set mouse=a
set clipboard=unnamedplus
set ruler
set laststatus=0
set cursorline
set background=dark
set smartindent
set autoindent
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4
set showtabline=4
set formatoptions-=cro
set hidden
set nowrap
set encoding=utf-8
